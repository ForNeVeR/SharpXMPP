<Window x:Class="SharpXMPP.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" TextOptions.TextFormattingMode="Display">
    <DockPanel VerticalAlignment="Stretch">
        <StackPanel Orientation="Horizontal" Margin="5" DockPanel.Dock="Top">
            <Label Content="JID:" Height="28" HorizontalAlignment="Left" Name="label1" Margin="3"/>
            <TextBox Height="23" HorizontalAlignment="Left" Name="textBox1" Width="169" Margin="3"/>
            <Label Content="Password:" Height="28" HorizontalAlignment="Left" Name="label2" Margin="3"/>
            <PasswordBox Height="23" HorizontalAlignment="Left" Name="passwordBox1" Width="120" Margin="3"/>
            <Button Content="Sign in" Height="23" HorizontalAlignment="Left" Name="button1" Width="75" Margin="3" Click="Button1Click" />
            
        </StackPanel>
        <FlowDocumentScrollViewer x:Name="scroll" Margin="5">
                <FlowDocument x:Name="doc" Background="Black" FontFamily="Consolas" TextAlignment="Left" />
         </FlowDocumentScrollViewer>

    </DockPanel>
</Window>
